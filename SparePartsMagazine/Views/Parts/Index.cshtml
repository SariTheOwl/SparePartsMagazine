@model IEnumerable<SparePartsMagazine.Models.Part>

@{
    ViewData["Title"] = "Lista części zapasowych";
}

<h1>Lista części zapasowych</h1>


<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Nazwa: <input type="text" name="nameSearch" value="@ViewData["NameSearch"]" />
            Cena: <input type="text" name="priceSearch" value="@ViewData["PriceSearch"]" />
                  <button type="submit" class="btn btn-secondary" >Szukaj</button>
</p>
        <a asp-action="Create"><button type="button" class="btn btn-secondary">Utwórz nową część zapasową</button></a>
        <a asp-action="Index"><button type="button" class="btn btn-secondary" >Wyczyść kryteria</button></a>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortBy="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortBy="@ViewData["PriceSortParm"]">@Html.DisplayNameFor(model => model.Price)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortBy="@ViewData["InputDateSortParm"]">@Html.DisplayNameFor(model => model.InputDate)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortBy="@ViewData["ModificationDateSortParm"]">@Html.DisplayNameFor(model => model.ModificationDate)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) zł
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InputDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModificationDate)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
